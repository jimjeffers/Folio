<section id="primary_screen">
  <%= image_tag(@project.showcase_image.url(:preview), :height => 400, :width => 940, :alt => @project.first_asset.alt_text) %>
</section>
<%= html(@project.description) %>
<% if !@assets.blank? %>
  <% for asset in @assets %>
    <section class="project_piece">
      <%= image_tag asset.image.url(:screenshot) %>
      <% unless asset.name.blank? %>
      <h3><%= asset.name %></h3>
      <% end %>
      <% unless asset.description.blank? %>
      <%= html(asset.description) %>
      <% end %>
    </section>
  <% end %>
<% else %>
  
<% end %>
