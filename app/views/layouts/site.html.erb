    </ul>
    <script type="text/javascript" charset="utf-8" src="/javascripts/jquery-1-1.3.2.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="/javascripts/dev.js"></script>
    <% end %>
  </body>
</html>