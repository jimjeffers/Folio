<h1>Listing Categories</h1>
<h2><%= link_to 'New Category', new_category_path %></h2>
<% if !@categories.blank? %>
  <ul>
    <% for category in @categories %>
      <li><%= category.name %> <%= link_to 'edit', edit_category_path(category), :class => 'edit' %> <span class="drag">drag</span></li>
    <% end %>
  </ul>
<% else %>
  <p>Oops no categories exist. <%= link_to 'Create one..', new_category_path %></p>
<% end %>
